# SSH Client Configuration

Include ~/.ssh/local.config
Include ~/.ssh/personal.config

# --- Global Defaults ---
Host *
    # Use macOS Keychain for passphrases (macOS system SSH only)
    # Ignore on non-macOS SSH (like Homebrew's openssh)
    IgnoreUnknown UseKeychain
    UseKeychain yes
    AddKeysToAgent yes

    # Keep connections alive (prevent timeout)
    ServerAliveInterval 60
    ServerAliveCountMax 3

    # Reuse connections (faster subsequent connections)
    ControlMaster auto
    ControlPersist 600

    # Security settings
    IdentitiesOnly yes
    HashKnownHosts yes

    # Compression for slow connections
    Compression yes

# --- GitHub ---

Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/github

Host git.lan
    Port 2222
    User git
